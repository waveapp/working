<?xml version="1.0" encoding="utf-8"?>
<!-- full width : 320 -->
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/lin_main"
    style="@style/sm_background_forlistrow">
	<LinearLayout
		style="@style/sm_linear_list"
	 	android:id="@+id/lin_data"
	 	android:orientation="vertical">
		<LinearLayout
		style="@style/sm_linear_list_sub"
	 	android:id="@+id/lin_left"
	 	android:orientation="horizontal">	
		 	<CheckBox 
		     style="@style/sm_checkbox_forlist"
		     android:id="@+id/choice"
		     android:text=""
		     android:gravity="left"
		     android:layout_marginRight="@dimen/margin_small"/>	 	
		 	<TextView 
			 style="@style/sm_textview_forlist_title"
			 android:layout_width="40dip"
		     android:id="@+id/day"
		     android:textSize="15dip"
		     android:text="DD"
		     android:gravity="center"
		     android:layout_gravity="center"/> 	 
 			<TextView 
			 style="@style/sm_textview_forlist_title"
			 android:layout_width="wrap_content"
		     android:id="@+id/bar1"
		     android:text="/" 
		     android:textColor="@color/lightgray"
		     android:gravity="center"
		     android:layout_gravity="center"
		     android:layout_marginLeft="@dimen/margin_small"
		     android:layout_marginRight="@dimen/margin_small"/>
		     
		 	<TextView 
		 	 style="@style/sm_textview_forlist_title"
		 	 android:layout_width="wrap_content"
		     android:id="@+id/name" 
		     android:text="테스트명"
			 android:maxLines="1"
			 android:singleLine="true"
		     android:gravity="left"
		     android:layout_gravity="center"/>
		 	<LinearLayout
			 style="@style/sm_linear_list_sub"
		 	 android:id="@+id/lin_right"
		 	 android:orientation="horizontal"
		 	 android:gravity="center|right"
		 	 android:layout_gravity="center|right"
		 	 android:layout_weight="1">	
			 	<TextView 
			 	 style="@style/sm_img_list"
			     android:id="@+id/dayofweek" 
			     android:text="w"
			     android:textSize="10dip"
			     android:textColor="@color/white"
			     android:gravity="center"
			     android:layout_gravity="center"
			     android:background="@drawable/sm_list_dayofweek"
			     android:layout_marginLeft="@dimen/margin_doublesmall"/>
			     <ImageView
			     style="@style/sm_img_list"
			     android:id="@+id/repeat" 
			     android:text=""
			     android:src="@drawable/sm_list_repeat_foryear"
			     android:layout_marginLeft="@dimen/margin_doublesmall"/>  
			     <ImageView 
			     style="@style/sm_img_list"
			     android:id="@+id/alarm" 
			     android:text=""  
			     android:src="@drawable/sm_list_alarm" 
			     android:layout_marginLeft="@dimen/margin_doublesmall"/> 			     
		 	 	<ImageView 
			     style="@style/sm_img_list"
			     android:id="@+id/event" 
			     android:text=""  
			     android:src="@drawable/sm_event_anniversary" /> 				     	 

			 </LinearLayout>		     
		 </LinearLayout>
    	<LinearLayout	
	 	style="@style/sm_linear_list"
	 	android:id="@+id/rel_dday"
	 	android:orientation="horizontal">    

		 	<TextView 
		     style="@style/sm_textview_forlist"
		     android:id="@+id/dday" 
		     android:text="D-000"   
		     android:gravity="right"
		     android:layout_weight="1"/> 
		 </LinearLayout>
		 <LinearLayout	
		 	style="@style/sm_linear_list"
		 	android:id="@+id/rel_specialday"
		 	android:orientation="horizontal">			 	
		 		<TextView 
			     style="@style/sm_textview_forlist"
			     android:id="@+id/leap" 
			     android:text="" 
			     android:gravity="right" 
			     android:layout_weight="1"/> 
		 	 	<TextView 
			     style="@style/sm_textview_forlist"
			     android:id="@+id/date" 
			     android:text="YYYYMMDD" 
			     android:gravity="right"/>
		 </LinearLayout>
		 <LinearLayout	
		 	style="@style/sm_linear_list"
		 	android:id="@+id/lin_memo"
		 	android:orientation="horizontal">
			 <TextView 
			 style="@style/sm_textview_forlist"
		     android:text="memo" 
		     android:id="@+id/memo" 
		     android:gravity="right"
		     android:layout_weight="1"/>
		 </LinearLayout>	 		 		 
	</LinearLayout>		 
 </LinearLayout>
