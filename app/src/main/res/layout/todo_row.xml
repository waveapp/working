<?xml version="1.0" encoding="utf-8"?>
<!--  list row -->
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_main"
    style="@style/sm_background_forlistrow"  
    android:orientation="vertical" >
	<LinearLayout
		style="@style/sm_linear_list"
	 	android:id="@+id/lin_todo" 
	 	android:orientation="horizontal">
	 	<TextView 
	     style="@style/sm_textview_forlist_memo_title"
	     android:id="@+id/memo"
	     android:text="MEMO" 
	     android:gravity="left"
		 android:layout_gravity="center"/>	
	</LinearLayout>
	<LinearLayout	
	 	style="@style/sm_linear_list"
	 	android:id="@+id/lin_todo"
	 	android:orientation="horizontal"
	 	android:gravity="right">
        <TextView 
     	 style="@style/sm_textview_forlist"
         android:id="@+id/confirmdate"
         android:text="confirmd"
         android:layout_weight="1"
         android:gravity="left"/>	 	
        <TextView 
     	 style="@style/sm_textview_forlist"
         android:id="@+id/dday"
         android:text="dday"
         android:layout_weight="1"
         android:gravity="right"/>	
	</LinearLayout>         
	<LinearLayout	
	 	style="@style/sm_linear_list"
	 	android:id="@+id/lin_todo"
	 	android:orientation="horizontal"
	 	android:gravity="right">         	 	
 		<TextView 
	     style="@style/sm_textview_forlist"
	     android:id="@+id/finishterm" 
	     android:text="yyyymmdd"   
	     android:gravity="right"/>
	 </LinearLayout>
	    
 	<LinearLayout
	style="@style/sm_linear_list"
 	android:id="@+id/lin_right"
 	android:orientation="horizontal"
 	android:gravity="center|right"
 	android:layout_gravity="center|right">	
		 <LinearLayout	
	 	 android:layout_height="wrap_content"
	 	 android:layout_width="wrap_content" 
	 	 android:id="@+id/lin_img"
	 	 android:orientation="horizontal"
	 	 android:layout_gravity="center|right"
	 	 android:gravity="center|right"
	 	 android:layout_weight="1"/>
	     <ImageView 
	     style="@style/sm_img_list"
	     android:id="@+id/alarm" 
	     android:text=""  
	     android:src="@drawable/sm_list_alarm" />  			 	 	     	      
	 </LinearLayout>
		 
	 	    	 
</LinearLayout>